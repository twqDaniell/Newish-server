{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "resolveJsonModule": true
  },
  "lib": ["es2015"],
  "include": ["src"],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/tests/**",
    "node_modules"
  ]
}
